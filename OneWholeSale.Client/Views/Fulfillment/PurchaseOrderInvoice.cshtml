@{
	ViewData["Title"] = "PurchaseOrderInvoice";
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<!DOCTYPE html>
<html>
<head>
	<title>Invoice</title>
	<style>
		table {
			border-collapse: collapse;
			width: 100%;
		}

		th, td {
			padding: 10px;
			text-align: left;
		}

		th {
			background-color: #f2f2f2;
		}

		h1, h2 {
			text-align: center;
		}

		#company-info {
			float: left;
			width: 50%;
		}

		#invoice-info {
			float: right;
			width: 50%;
			text-align: left;
		}

		.clearfix::after {
			content: "";
			clear: both;
			display: table;
		}

		#customer-info {
			margin-top: 20px;
		}

		#item-table {
			margin-top: 20px;
		}

			#item-table img {
				max-width: 100px;
				max-height: 100px;
				padding: 5px;
				border: 1px solid #ddd;
				border-radius: 5px;
				box-shadow: 0px 0px 5px #ddd;
			}

		#notes {
			margin-top: 20px;
		}

		#terms {
			margin-top: 20px;
		}
	</style>
</head>
<body>
	<div class="container">
		<div class="card p-3">
			<header>
				<img src="[Insert Company Logo URL]" alt="Company Logo">
				<h1>INVOICE</h1>
				<div class="clearfix">
					<div id="company-info">
						<p>[Company Name]</p>
						<p>[Company Address]</p>
						<p>[City, State Zip Code]</p>
						<p>Phone: [Company Phone Number]</p>
						<p>Email: [Company Email Address]</p>
					</div>
				</div>
				<div class="clearfix mt-3">
					<div id="company-info">
						<div class="panel-hdr" role="heading" style="background: #4e4c77; width:95%;">
							<h2 class="ui-sortable-handle" style="color: #ffffff; ">
								Bill To:
							</h2>
						</div>
						<p class="mt-3">[Customer Name]</p>
						<p>[Customer Address]</p>
						<p>[City, State Zip Code]</p>
						<p>Phone: [Customer Phone Number]</p>
						<p>Email: [Customer Email Address]</p>
					</div>
					<div id="invoice-info">
						<div class="panel-hdr" role="heading" style="background: #4e4c77; width:95%;">
							<h2 class="ui-sortable-handle" style="color: #ffffff;">
								Invoice Details:
							</h2>
						</div>
						<p class="mt-3">Invoice Number: [Insert Invoice Number]</p>
						<p>Date: [Insert Invoice Date]</p>
						<p>Due Date: [Insert Invoice Due Date]</p>
						<p>Payment Terms: [Insert Payment Terms]</p>
						<p>Payment Method: [Insert Payment Method]</p>
					</div>
				</div>
				
			</header>

			<main>
				<table id="item-table" >
					<thead style="background:#4e4c77;">
						<tr>
							<th>Item</th>
							<th>Description</th>
							<th>Quantity</th>
							<th>Unit Price</th>
							<th>Discount</th>
							<th>Tax</th>
							<th>Total</th>
						</tr>
					</thead>
					<tbody>
						<tr>
							<td>[Item]</td>
							<td>[Product A Name]<br>[Product A Number or Code]</td>
							<td>[Product A Quantity]</td>
							<td>$[Product A Unit Price]</td>
							<td>$[Product A Discount]</td>
							<td>$[Product A Tax]</td>
							<td>$[Produc Total Count]</td>
					</tbody>
					<tfoot>

						<tr>
							<td colspan="6" style="text-align: right;">Subtotal:</td>
							<td>[Product A Subtotal]</td>
						</tr>
						<tr>
							<td colspan="6" style="text-align: right;">Tax:</td>
							<td>[Product A Tax]</td>
						</tr>
						<tr>
							<td colspan="6" style="text-align: right;">Shipping:</td>
							<td>[Product A Shipping]</td>
						</tr>
						
						<tr>
							<td colspan="6" style="text-align: right;">Total:</td>
							<td>[Product A Total]</td>
						</tr>

					</tfoot>
				</table>
			</main>

			<footer>
				<p>Thank you for your business!</p>
			</footer>
		</div>
	</div>
</body>
</html>



